{
    "name": "Youtube Live Chat Recorder",
    "version": "0.0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "all_frames": true,
        "matches": [
            "https://*.youtube.com/watch*"
        ],
        "js": [
        ],
        "run_at": "document_start"
    }],
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}